# Flame-ftrack Integration - Configuration
# Copy this file to .env and fill in with your credentials
# NEVER commit the .env file to git!

# ftrack Server
FTRACK_SERVER=https://your-studio.ftrackapp.com
FTRACK_API_KEY=your-api-key-here
FTRACK_API_USER=your.email@studio.com

# Export Settings
EXPORT_THUMBNAIL_FORMAT=jpeg
EXPORT_THUMBNAIL_QUALITY=85
EXPORT_TEMP_DIR=/tmp/flame_ftrack_exports

# Flame Project (optional - can be auto-detected)
# FLAME_PROJECT_NAME=

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/flame_ftrack.log
